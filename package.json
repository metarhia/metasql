{
  "name": "metasql",
  "version": "3.0.0-alpha.2",
  "description": "MetaSQL Database schema generator, migrations and query builder for Metarhia",
  "main": "metasql.js",
  "types": "metasql.d.ts",
  "bin": {
    "metasql": "bin/cli.js"
  },
  "files": [
    "lib/",
    "bin/",
    "metasql.d.ts"
  ],
  "scripts": {
    "test": "npm run lint && npm run types && metatests test/",
    "types": "tsc -p tsconfig.json",
    "lint": "eslint . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\"",
    "fix": "eslint . --fix && prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/metasql.git"
  },
  "keywords": [
    "sql",
    "metarhia",
    "query builder",
    "schema",
    "migrations",
    "database"
  ],
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metarhia/metasql/issues"
  },
  "homepage": "https://github.com/metarhia/metasql#readme",
  "engines": {
    "node": "18 || 20 || 21 || 22"
  },
  "dependencies": {
    "metadomain": "^2.0.0-alpha.1",
    "metaschema": "^2.2.0",
    "metavm": "^1.4.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^22.3.0",
    "@types/pg": "^8.10.2",
    "eslint": "^9.9.0",
    "eslint-config-metarhia": "^9.0.3",
    "metatests": "^0.8.2",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4"
  }
}
