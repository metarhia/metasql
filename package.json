{
  "name": "metasql",
  "version": "3.0.0-alpha.3",
  "description": "MetaSQL Database schema generator, migrations and query builder for Metarhia",
  "main": "metasql.js",
  "types": "metasql.d.ts",
  "bin": {
    "metasql": "bin/cli.js"
  },
  "files": [
    "lib/",
    "bin/",
    "metasql.d.ts"
  ],
  "scripts": {
    "test": "npm run lint && npm run types && node --test",
    "types": "tsc -p tsconfig.json",
    "lint": "eslint . && prettier --check \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\"",
    "fix": "eslint . --fix && prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" \"**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/metasql.git"
  },
  "keywords": [
    "sql",
    "metarhia",
    "query builder",
    "schema",
    "migrations",
    "database"
  ],
  "author": "Timur Shemsedinov <timur.shemsedinov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metarhia/metasql/issues"
  },
  "homepage": "https://github.com/metarhia/metasql#readme",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "metadomain": "^2.0.0-alpha.3",
    "metaschema": "^2.2.2",
    "metavm": "^1.4.5",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/pg": "^8.15.5",
    "eslint": "^9.35.0",
    "eslint-config-metarhia": "^9.1.3",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
